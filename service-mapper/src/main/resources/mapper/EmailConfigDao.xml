<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tlh.admin.dao.EmailConfigDao">

    <resultMap type="cn.tlh.admin.common.pojo.system.EmailConfig" id="SysEmailMap">
        <result property="id" column="user_id" jdbcType="INTEGER"/>
        <result property="host" column="username" jdbcType="VARCHAR"/>
        <result property="port" column="nick_name" jdbcType="VARCHAR"/>
        <result property="user" column="gender" jdbcType="VARCHAR"/>
        <result property="pass" column="phone" jdbcType="VARCHAR"/>
        <result property="fromUser" column="email" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert">
        INSERT INTO `test_sdnd`.`tool_email_config`(`config_id`, `from_user`, `host`, `pass`, `port`, `user`)
        VALUES (#{id}, #{host}, #{port}, #{user}, #{pass}, #{fromUser});
    </insert>

    <select id="queryById" resultType="cn.tlh.admin.common.pojo.system.EmailConfig">
        select  * from `test_sdnd`.`tool_email_config` where config_id =#{id}
    </select>


</mapper>